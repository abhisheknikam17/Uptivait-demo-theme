    .zig-zagcontainer-{{ section.id }}{
        display: flex;
        flex-direction: {{ section.settings.flex_direction }};
        width: {{ section.settings.width }}%;
        margin: auto;
        margin-top: 55px;
        background-color:{{ section.settings.bgcolordesktop }};
        overflow: hidden;
        border-radius:24px;
    }
    .section-image{
        
       width: {{ section.settings.image_size }}%;
       {% if section.settings.image_size == '40' %}
       margin: 10px auto;
       {% endif %}
       object-fit: contain;
        overflow:hidden;
    }
    .zig-image{
        object-fit: cover;
        max-height: 490px;
        /* width: {{ section.settings.image_size }}%;
        margin: auto; */
        border-radius: 24px;
    }
    .text-blocks{
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        height: 100%;
        margin: auto;
        padding: 0 40px;
    }
    @media  screen and (max-width: 750px) {
        .zig-zagcontainer-{{ section.id }}{
           width:90%;
           flex-direction: column !important;
           align-items:center;
           background-color:{{ section.settings.bgcolor }};
           padding-bottom: 20px;
           border-radius: 24px

        }
        .section-image{
        width: 100% !important;
    }
    .text-blocks{
        width: 100%;
        /* display: flex;
