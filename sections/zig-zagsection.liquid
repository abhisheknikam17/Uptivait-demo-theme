        text-align: center;
        padding: 0;
        margin-top: 25px;
        /* padding-left: 40px; */
    }
    }
</style>
<div class="zig-zagcontainer-{{ section.id }}">
<div class="section-image">
    <img src="{{ section.settings.zig_img|  image_url: width: 550 }}" alt="" height="auto" width="550px" class="zig-image" loading="lazy">
</div>
<div class="text-blocks" >
   {% content_for 'blocks' %} 
</div>
</div>
{% schema %}
{
    "name": "Zig-zag Section",
    "blocks": [
        {
            "type": "_customheading"
        },
        {
            "type": "_info-images"
        },
        {
            "type": "_herotext"
        },
        {
            "type": "_buttons"
        },
        {
            "type": "_subheading"
        },
        {
            "type": "@theme"
        }
    ],
    "settings": [
        {
            "type": "image_picker",
            "id": "zig_img",
            "label":"Select A Image"
        },
        {
            "type": "color_background",
            "id": "bgcolor",
            "label": "Background Color(Mobile)"
        },
        {
            "type": "color_background",
            "id": "bgcolordesktop",
            "label": "Background Color(Desktop)"
        },
        {
            "type": "select",
            "id": "flex_direction",
            "label" : "Invert",
            "options": [
                {
                    "value": "row",
                    "label": "Default"
                },
                {
                    "value": "row-reverse",
                    "label": "Invert"
                }
                
            ],
            "default": "row"
        },
        {
            "type": "select",
            "id": "width",
            "label" : "Width",
            "options": [
                {
                    "value": "80",
                    "label": "80%"
                },
                {
                    "value": "96",
                    "label": "96%"
                }
                
            ],
            "default": "80"
        },
        {
            "type": "select",
            "id": "image_size",
            "label" : "Image size",
            "options": [
                {
                    "value": "45",
                    "label": "Small"
                },
                {
                    "value": "50",
                    "label": "Full Size"
                }
                
            ],
            "default": "50"
        }

        
        ],
        "presets": [
            {
                "name": "Zig-zag Section"
            }
        ]
}
{% endschema %}