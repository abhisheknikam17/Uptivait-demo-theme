<footer class="footer">
    
    <div class="width">
        <div class="bgcolor">
        <div class="footer-top">
            {% for block in section.blocks %}
                {% if block.type == 'logo_and_information' %}
                    <div class="footer-column logo-info large">
                        <img src="{{ block.settings.footer_logo |  image_url }}" alt="Logo" width="115px" height="34" class="footer-logo"> 
                        <p>{{ block.settings.footer_text |  strip_html }}</p>
                        <div class="social-icons-container">
                                <a href="{{ block.settings.link1_url }}" target="_blank"><img src="{{ block.settings.social1_img |  image_url  }}" alt="" width="32" height="32" class="social-links"></a>
                                <a href="{{ block.settings.link2_url }}" target="_blank"><img src="{{ block.settings.social2_img |  image_url  }}" alt="" width="32" height="32" class="social-links"></a>
                        </div>
                    </div>
                
                    
                {% endif %}
            {% endfor %}
            <div class="mobile-column-reverse">
                
                {% for block in section.blocks %}
                
                    {% if block.type == 'navigation' %}
                    
                        <div class="footer-column linklists">
                            <div class="parent-element">
                                <div class="mobile-dropdown">
                                    <p class="list-tite">{{ block.settings.linklists.title }}
                                    </p>
                                    <svg class="dropdown-svg" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M8.99609 0V18" stroke="#1A1A1A" stroke-width="2"/>
                                        <path d="M18 8.99609L0 8.99609" stroke="#1A1A1A" stroke-width="2"/>
                                        </svg>
                                </div>
                            
                                <div class="mobile-linklists-dropdown">
                                {% for link in block.settings.linklists.links %}
                                    
                                    <li><a href="{{ link.url }}"><p>{{ link.title }}</p></a>
                                
                                    </li>
                                
                                {% endfor %}
                                </div>
                            </div>
                        </div> 
                        {% endif %}
                        
                    {% endfor %}
                
                
                {% for block in section.blocks %}
                        {%  if block.type == 'newsletter' %}
                        <div class="footer-column newsletter large">
                                <h2>{{ block.settings.newsletter_head }}</h2>
                                <p>{{ block.settings.newsletter_txt }}</p>
                                {% form 'customer', id: 'newsletter-form' %}
                                    {% if form.posted_successfully? %}
                                        <div class="email-signup__message">
                                        <span class="svg-wrapper icon-success">
                                        {{ 'icon-checkmark.svg' | inline_asset_content }}
                                        </span>
                                        <p>You've been subscribed Succesfully</p>
                                        </div>
                                    {% endif %}
                                    {% if form.errors %}
                                        <div class="email-signup__message">
                                        <svg
                                            viewBox="0 0 20 20"
                                            xmlns="http://www.w3.org/2000/svg"
                                            focusable="false"
                                            aria-hidden="true"
                                            class="icon-error"
                                            >
                                            {%- render 'icon', icon: 'error'  -%}
                                            </svg>
                                        <p>{{ form.errors.messages.email }}</p>
                                        </div>
                                    {% endif %}
                                    <input type="hidden" name="contact[tags]" value="newsletter">
                                    <input type="email" name="contact[email]" placeholder="Enter your Email Address">
                                    <button type="submit"><p>Sign Up</p></button>
                                {% endform %}
                                {% comment %} <form class="newsletter-form">
                                    <input type="email" placeholder="Enter your Email Address">
                                    <button type="submit"><p>Sign Up</p></button>
                                </form> {% endcomment %}
                                <p>{{ block.settings.newsletter_txt2 }}</p>
                        </div>
                    {% endif %}
                {% endfor %}
                
            </div>
            
        </div>
        </div>
    
    <div class="footer-bottom">
        <div>
            <p>{{ section.settings.copyright }}</p>
        </div>
            {% for block in section.blocks %}
            {% if block.type == 'payment_icons' %}
                <ul class="payment-icons-container">
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                   <li>{{ block.settings.payment_img |  image_url: width: 34 |  image_tag: class:'payment-icons' }}</li>
                </ul> 
            {% endif %}
            {% endfor %}
    </div>
    </div>    
</footer>

