<section class="premium-contact-wrapper">

  <div class="premium-contact-container">

    <!-- LEFT SIDE -->
    <div class="contact-left">

      <h2 class="contact-heading">
        {{ section.settings.heading }}
      </h2>

      <div class="contact-icons">
        {% for block in section.blocks %}
          {% if block.type == 'contact_icon' %}
            <div class="contact-icon-item phone">
              {% if block.settings.icon_svg != blank %}
                <img src="{{ block.settings.icon_svg | image_url: width: 40 }}" alt="contact icon" width="32" height="32">
              {% else %}
                <div class="placeholder-icon"></div>
              {% endif %}
              <p>Phone Number</p>
              <p>{{ block.settings.contact_info }}</p>
            </div>
          {% elsif block.type == 'contact_email' %}
            <div class="contact-icon-item email">
              {% if block.settings.icon_svg2 != blank %}
                <img src="{{ block.settings.icon_svg2 | image_url: width: 40 }}" alt="contact icon" width="32" height="32">
              {% else %}
                <div class="placeholder-icon"></div>
              {% endif %}
              <p>Email</p>
              <p>{{ block.settings.email }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>

    <!-- RIGHT SIDE FORM -->
    <div class="contact-form-card">

      <h3 class="form-title">Send Us A Message</h3>

      {% form 'contact', class: 'premium-contact-form' %}

        <div class="form-row">
          <input type="text" name="contact[name]" placeholder="Name" required>
        </div>

        <div class="form-row two-col">
          <input type="email" name="contact[email]" placeholder="Email" required>
          <input type="text" name="contact[phone]" placeholder="Telephone">
        </div>

        <div class="form-row">
          <textarea name="contact[body]" placeholder="Your message" rows="5"></textarea>
        </div>

        <button class="contact-btn" type="submit">Send Message</button>

        <p class="response-time">Response time in 24â€“48 hours</p>

      {% endform %}

    </div>

  </div>
</section>

{% schema %}
{
  "name": "Contact Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Would you like to get in touch with us?"
    },
            {
                "type": "range",
                "id": "margin_top",
                "label": "Margin-top",
                 "step": 1,
                 "min": 0,
                 "max": 100,
                 "default": 15
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "label": "Margin-bottom",
                 "step": 1,
                 "min": 0,
                 "max": 100,
                 "default": 93
            }
  ],
  "blocks": [
    {
      "type": "contact_icon",
      "name": "Contact Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_svg",
          "label": "Upload SVG Icon"
        },
        {
            "type": "text",
            "id": "contact_info",
            "label": "Phone Number"
        }
        
      ]
    },
    {
      "type": "contact_email",
      "name": "Contact Email",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_svg2",
          "label": "Upload SVG Icon"
        },
        {
            "type": "text",
            "id": "email",
            "label": "Email"
        }
        
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Contact Section"
    }
  ]
}
{% endschema %}
