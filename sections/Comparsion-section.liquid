    max-width: 100%;
}

.block-wrapper p{
    font-size: 14px;
    /* overflow-wrap: break-word; */
    /* word-wrap: break-word; */
}
.heading2{
    padding-bottom: 3px;
}
.block-wrapper h3{
    font-size: 20px;
}

.sec_heading{
    font-size: 32px;
}
    .second-price-info h3{
    font-size: 24px;
    /* padding-top: 23px; */

    }
    .price-and-info h3{
    font-size: 24px;
    /* padding-top: 23px; */
}
.price-and-info{
    width: 90%;
    margin: 26px auto;
    /* word-wrap: break-word !important; */
}
.second-price-info{
    width: 100%;
     margin:26px auto;
     /* word-wrap: break-word !important; */
     /* overflow-wrap: break-word; */
}
.padding-none{
    padding-bottom: 6px !important;
}
.block-wrapper p,
.heading,
.heading2,
.price {
    font-size: 14px;
    word-wrap: break-word !important;
    overflow-wrap: break-word !important;
    white-space: normal !important;
    text-wrap: wrap;
}
 }
    
</style>

<div class="comparison-section-container-{{ section.id }}">
    <h2 class="sec_heading">{{ section.settings.section_heading }}</h2>
    
    <div class="block-wrapper">
        {% for block in section.blocks %}
        {% if block.type == 'Uptavit_block' %}
           <div class="block1">
            <div class="block1-inner">
                <h3 class="heading">{{ block.settings.ring_name }}</h3>
                <p>{{ block.settings.benefit_1 }}</p>
                <p>{{ block.settings.benefit_2 }}</p>
                <p>{{ block.settings.benefit_3 }}</p>
                <p>{{ block.settings.benefit_4 }}</p>
                <p class="padding-none">{{ block.settings.benefit_5 }}</p>
            </div>
            <div class="price-and-info">
                <h3>{{ block.settings.uptavit_price }}</h3>
                <p class="price">{{ block.settings.merit }}</p>
            </div>
           </div>
           {% elsif block.type == 'product_photo' %}
            <div class="block2">
                <img src="{{ block.settings.product_pic |  image_url: width: 400 }}" alt="Uptavit Product photo" width="auto" height="auto">
            </div>
        {% elsif block.type == 'other_brands_block' %}
           <div class="block3">
            <h3 class="heading2">{{ block.settings.other_name }}</h3>
            <p>{{ block.settings.point_1 }}</p>
            <p>{{ block.settings.point_2 }}</p>
            <p>{{ block.settings.point_3 }}</p>
            <p>{{ block.settings.point_4 }}</p>
            <p class="padding-none">{{ block.settings.point_5 }}</p>
            <div class="second-price-info">
                <h3>{{ block.settings.other_price }}</h3>
                <p class="price">{{ block.settings.demerit }}</p>
            </div>
           </div>
        {% endif %}
        {% endfor %}
    </div>
    
</div>

