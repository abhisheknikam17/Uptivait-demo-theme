    .block2{
        display: none;
    }
    .comparison-section-container-{{ section.id }}{
        width: 95%;
    }
    .block-wrapper{
        width: 100%;
         margin: auto;
    display: flex;
    justify-content: center;
    gap: 0px;
}
.block1-inner{
    border-right: 2px solid hsla(0, 0%, 0%, 0.1);
