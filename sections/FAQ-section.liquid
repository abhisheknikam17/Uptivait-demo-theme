<style>
    .faq-section-container-{{ section.id }}{
        width: 85%;
        margin: {{ section.settings.margin_top }} auto {{ section.settings.margin_top }} auto;
        display:flex;
        
    }
    .heading{
        font-size: 48px;
        font-weight: 500;
    }
    .image-container{
        width: 40%;
        margin-left: 10%;
    }
    .image-container img{
        width: 440px;
        height: 500px;
    }
    .faq-block{
        width: 50%;
    }
    .faq-heading{
        margin-bottom: 50px;
    }
    .faq-question{
        font-size: 16px;
        margin-bottom: 0;
        flex: 1;
        cursor: pointer;
    }
    .faq-block-question{
        width: 60%;
        
    }
     .faq-question-header{
        margin-top: 12px !important;
        padding: 18px 16px;
        background-color: #F5F1EB;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
     .faq-question-header svg{
        /* width: 28px; */
        margin-right: 10px;
        transition: 0.1s transform;
        cursor: pointer;
     }
     .faq-block-question.active .faq-question-header svg{
        transform: rotate(45deg);
        
    }

     .faq-block-answer{
       max-height: 0;
        overflow: hidden;
        transition: 0.7s max-height;
       
    }

     .faq-block-question.active .faq-block-answer{
       max-height: 300px;
       border-bottom: 1px solid #D9D9D9;
        
     }
    .faq-answer{
       font-size: 16px;
       padding: 18px 16px;
    }

    @media screen and (max-width: 768px) {
        .faq-section-container-{{ section.id }} {
            flex-direction: column;
            width: 90%;
            margin:auto;
        }
        .image-container {
            /* width: 100%;
            margin-bottom: 20px; */
            display: none;
        }
        .faq-block{
        width: 100%;
    }
    .faq-block-question{
        width: 100%;
        
    }
        .heading{
            font-size: 32px;
            text-align: center !important;
            /* display: inline-block; */
        }
    }

    .faq-heading {
    margin-bottom: 35px;
}
    .faq-question-header svg{
        width: 13px;
}

        .faq-question{
        font-size: 14px;
}
        .faq-answer{
            font-size: 14px;
}
</style>

<div class="faq-section-container-{{ section.id }}" style="margin: {{ section.settings.margin_top }}px auto {{ section.settings.margin_top }}px auto;">
    <div class="image-container">
        <img src="{{ section.settings.faq_img |  image_url: width: 550 }}" alt="" height="auto" width="400">
    </div>
    <div class="faq-block">
        <div class="faq-heading">
            <h1 class="heading">{{ section.settings.heading_faq }}</h1>
           </div>
        {% for block in section.blocks %}
           <div class="faq-block-question">
                <header class="faq-question-header">
                <p class="faq-question">{{ block.settings.question }}</p>
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8.99609 0V18" stroke="#1A1A1A" stroke-width="2"/>
                    <path d="M18 8.99609L0 8.99609" stroke="#1A1A1A" stroke-width="2"/>
                </svg>
                </header>
                <div class="faq-block-answer">
                <p class="faq-answer">{{ block.settings.answer |  strip_html }}</p>
                </div>
           </div>
           
        {% endfor %}
    </div>
</div>
<script>

    const questionHeaders = document.querySelectorAll('.faq-question-header')
    questionHeaders.forEach((header) => {
        header.addEventListener('click', () =>{
          header.parentElement.classList.toggle("active")
        })
    })
</script>
{% schema %}
{
    "name": "FAQ Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "faq_img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "heading_faq",
            "label": "FAQ Heading"
        },
        {
            "type": "range",
            "id": "margin_top",
            "label": "Margin Top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "default": 40
        },
        {
            "type": "range",
            "id": "margin_bottom",
            "label": "Margin Bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "default": 32
        }
    ],
    "blocks": [
        {
            "type": "faq",
            "name" : "FAQ Item",
            "settings": [
                {
                    "type": "text",
                    "id": "question",
                    "label": "Question",
                    "default": "Add Your Question here"
                },
                {
                    "type": "richtext",
                    "id": "answer",
                    "label": "Answer"
                }
            ]
        }
    ],
    "presets": [
          {
            "name": "FAQ Section"
          }
        ]
}
{% endschema %}