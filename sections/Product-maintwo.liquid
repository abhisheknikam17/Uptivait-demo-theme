}

.swatch.active {
  border-color: black;
}

/* Add to Cart */
.add-to-cart-btn {
  margin-top: 25px;
  width: 100%;
  background: black;
  color: white;
  padding: 18px;
  border-radius: 60px;
  font-size: 20px;
  cursor: pointer;
  border: none;
}

/* Payment icons */
.payment-icons {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-top: 20px;
}

.payment-icons img {
  height: 20px;
}

/* Testimonial Box */
.testimonial-box {
  background: white;
  border: 1px solid #eee;
  padding: 20px;
  border-radius: 14px;
  margin: 25px 0;
}

.review-stars{
    display: flex;
    gap: 2px;
}

.testimonial-author {
  font-weight: 700;
  margin-top: 10px;
}

/* Accordion */
.accordion-item {
  border-bottom: 1px solid #e3e3e3;
  padding: 18px 0;
  cursor: pointer;
  font-size: 20px;
  font-weight: 600;
}

.accordion-content {
  display: none;
  padding: 10px 0;
  line-height: 1.6;
}

.tick-img{
    width: 24px;
    height: 24px;
}

/* Important Note Box */
.note-box {
  background: #FAF6ED;
  padding: 20px;
  border-radius: 14px;
  margin-top: 25px;
}

.note-title {
  font-weight: 700;
  margin-bottom: 10px;
